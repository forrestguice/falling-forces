<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forrestguice.fallforces"
    android:installLocation="auto"
    android:versionCode="6"
    android:versionName="0.3.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/light" >
        <activity
            android:name="com.forrestguice.fallforces.lib.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.forrestguice.fallforces.lib.HelpActivity"
            android:label="@string/app_help" />
        <activity
            android:name="com.forrestguice.fallforces.lib.HelpAboutView"
            android:label="@string/app_help" />
        <activity
            android:name="com.forrestguice.fallforces.lib.HelpHowItWorksView"
            android:label="@string/app_help" />
        <activity
            android:name="com.forrestguice.fallforces.lib.SettingsActivity"
            android:label="@string/app_settings" />
        <activity
            android:name="com.forrestguice.fallforces.lib.graph.ThreeDGraphActivity"
            android:label="@string/app_graph" />

    </application>
  
</manifest>